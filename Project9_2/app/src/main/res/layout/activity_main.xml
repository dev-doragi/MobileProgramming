<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ibZoomin"
            android:src="@drawable/ic_menu_zoom" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ibZoomout"
            android:src="@drawable/ic_menu_zoom" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ibRotate"
            android:src="@drawable/ic_menu_rotate" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="67dp"
            android:id="@+id/ibBright"
            android:src="@drawable/stat_sys_upload_anim1" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="67dp"
            android:id="@+id/ibDark"
            android:src="@drawable/stat_sys_download_anim0" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ibGray"
            android:src="@drawable/ic_media_route_disabled_mtrl_alpha" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pictureLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:gravity="center" >

    </LinearLayout>

  </LinearLayout>